{
  "openapi": "3.0.2",
  "info": {
    "title": "Crystal Skull API",
    "version": "0.1.0",
    "description": "Generates a complete quiz using just a topic name",
    "contact": {
      "name": "Neel Kamath",
      "email": "neelkamath@icloud.com",
      "url": "https://github.com/neelkamath/crystal-skull"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "https://crystal-skull.herokuapp.com",
      "description": "This is a temporary development server which may be offline or serving a different API in the future."
    }
  ],
  "paths": {
    "/search": {
      "get": {
        "tags": [
          "search"
        ],
        "description": "Searches for topic names to generate a quiz on",
        "operationId": "searchTopics",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Topics to search for",
            "required": true,
            "schema": {
              "type": "string",
              "example": "appl"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Topic names and descriptions",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "topics": [
                      {
                        "name": "Apple",
                        "description": "An apple is a sweet, edible fruit produced by an apple tree (Malus domestica). Apple trees are cultivated worldwide and are the most widely grown species in the genus Malus."
                      },
                      {
                        "name": "Apple Inc.",
                        "description": "Apple Inc. is an American multinational technology company headquartered in Cupertino, California, that designs, develops, and sells consumer electronics, computer software, and online services."
                      }
                    ]
                  },
                  "type": "object",
                  "properties": {
                    "topics": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "description": "Topic name",
                            "type": "string"
                          },
                          "description": {
                            "description": "Topic description",
                            "type": "string"
                          }
                        },
                        "required": [
                          "name",
                          "description"
                        ]
                      }
                    }
                  },
                  "required": [
                    "topics"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/quiz": {
      "post": {
        "tags": [
          "generate"
        ],
        "description": "This generates an entire quiz containing fill-in-the-blank questions using just a topic name. You should get the topic name from GET `/search`.",
        "operationId": "generateQuiz",
        "requestBody": {
          "description": "The topic to generate the quiz on, and the type of questions to generate",
          "content": {
            "application/json": {
              "schema": {
                "example": {
                  "topic": "Apple Inc.",
                  "types": [
                    "date",
                    "organization",
                    "person"
                  ]
                },
                "type": "object",
                "properties": {
                  "topic": {
                    "description": "Topic to generate the quiz on",
                    "type": "string"
                  },
                  "types": {
                    "description": "These are the types of questions generated. The possible values are `\"date\"`, `\"location\"`, `\"money\"`, `\"organization\"`, `\"percentage\"`, `\"person\"`, and `\"time\"`.",
                    "default": [
                      "date",
                      "location",
                      "organization",
                      "person"
                    ],
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "topic"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Generated quiz",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "quiz": [
                      {
                        "question": "In 1996, Spindler was replaced by _____ as CEO.",
                        "options": [
                          "Steve Jobs",
                          "Gil Amelio",
                          "Steve Wozniak",
                          "Ronald Wayne"
                        ],
                        "answer": "Gil Amelio",
                        "type": "person"
                      }
                    ]
                  },
                  "type": "object",
                  "properties": {
                    "quiz": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "question": {
                            "description": "Five consecutive underscores (`_____`) denote where the answer is to be filled in.",
                            "type": "string"
                          },
                          "options": {
                            "description": "Possible answers",
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "minItems": 4,
                            "maxItems": 4
                          },
                          "answer": {
                            "description": "Correct option",
                            "type": "string"
                          },
                          "type": {
                            "description": "Question type",
                            "type": "string",
                            "enum": [
                              "date",
                              "location",
                              "money",
                              "organization",
                              "percentage",
                              "person",
                              "time"
                            ]
                          }
                        },
                        "required": [
                          "question",
                          "options",
                          "answer",
                          "type"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}